<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" >
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="~/Content/Images/favicon.ico" type="image/x-icon">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Styles/BootStrap")
    @Styles.Render("~/Styles/IonIcons")
    @Styles.Render("~/Styles/FontAwesome")
    @Styles.Render("~/Styles/AllSkins")
    @Styles.Render("~/Styles/AdminLTE")
    @Styles.Render("~/Styles/AdminCore")
    @Styles.Render("~/Styles/LayAlert")
    @Styles.Render("~/Styles/Pace")
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        <header class="main-header">
            @Html.Partial("~/Views/Shared/Header.cshtml")
        </header>


        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            @Html.Partial("~/Views/Shared/LeftNav.cshtml")
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->

        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    @ViewBag.Title
                    <small>@ViewBag.Content</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">Forms</a></li>
                    <li class="active">General Elements</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            @Html.Partial("~/Views/Shared/Footer.cshtml")
        </footer>
            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                @Html.Partial("~/Views/Shared/ControlSlider.cshtml")
            </aside>
            <!-- /.control-sidebar -->
            <!-- Add the sidebar's background. This div must be placed
        immediately after the control sidebar -->
            <div class="control-sidebar-bg"></div>
    </div>


        @Scripts.Render("~/Scripts/Jquery")
        @Scripts.Render("~/Scripts/Jquery-Validate")
        @Scripts.Render("~/Scripts/Jquery-Validate-unobtrusive")
        @Scripts.Render("~/Scripts/Bootstrap")
        @Scripts.Render("~/Scripts/FastClick")
        @Scripts.Render("~/Scripts/Adminlte")
        @Scripts.Render("~/Scripts/Demo")
        @Scripts.Render("~/Scripts/BootstrapTable")
        @Scripts.Render("~/Scripts/ValidationExtention-Bootstrap")
        @Scripts.Render("~/Scripts/LayAlert")
        @Scripts.Render("~/Scripts/Pace")
        @RenderSection("Scripts", required: false)
</body>
</html>
