
@{
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
@section Styles{
    @Styles.Render("~/Styles/jqueryTreeGrid")
    @Styles.Render("~/Styles/BootstraTable")
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="col-xs-12">
                    @Html.ActionLinkAdd("创建", "Create", new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>
            <div class="box-body table-responsive">
                <table id="ManagerTable" class="table col-xs-12 col-sm-12 col-lg-12 text-nowrap"></table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Scripts/BootstrapTable")
    @Scripts.Render("~/Scripts/BootstrapTable_zh")
    @Scripts.Render("~/Scripts/bootstrapTableTreeGrid")
    @Scripts.Render("~/Scripts/Jquerytreegrid")
    @Scripts.Render("~/Scripts/ManagerIndex")
}