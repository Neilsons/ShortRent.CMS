@model PersonLoginModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel="shortcut icon" href="~/Content/Images/favicon.ico" type="image/x-icon">
    <title>短期招聘后台系统登录</title>
    @Styles.Render("~/Styles/BootStrap")
    @Styles.Render("~/Styles/FontAwesome")

    @Styles.Render("~/Styles/animat")
    @Styles.Render("~/Styles/login")
    @Styles.Render("~/Styles/Loginstyle")
    @Styles.Render("~/Styles/IcheckSkins")
    @Styles.Render("~/Styles/LayAlert")
    @Styles.Render("~/Styles/Pace")
</head>

<body class="signin">
    <div class="signinpanel">
        <div class="row">
            <div class="col-sm-7">
                <div class="signin-info">
                    <div class="logopanel m-b">
                        <h1>短期招聘平台</h1>
                    </div>
                    <div class="m-b"></div>
                    <h4>欢迎使用 <strong>短期招聘后台管理系统</strong></h4>
                </div>
            </div>
            <div class="col-sm-5">
                @using (Ajax.BeginForm("Login",new { returnUrl= ViewBag.ReturnUrl },new AjaxOptions() { HttpMethod = "POST", OnSuccess = "SuccessLogin" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-error" })
                    @Html.AntiForgeryToken()
                    <h4 class="no-margins">登录：</h4>
                    <p class="m-t-md">登录招聘后台管理系统</p>
                    @Html.TextBoxFor(c => c.Name, htmlAttributes: new { @class = "form-control uname", placeholder = "用户名" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-error" })
                    @Html.PasswordFor(c => c.PassWord, htmlAttributes: new { @class = "form-control pword", placeholder = "密码" })
                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-error" })
                    <div class="marginTop">
                        <label>
                            @Html.CheckBoxFor(c => c.ReadMe, htmlAttributes: new { @class = "form-control" })
                            &nbsp;&nbsp; 记住我 ?
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success btn-block">登录</button>
                }
            </div>
        </div>
        <div class="signup-footer">
            <div class="pull-left">
                &copy; 2019 All Rights Reserved. GitHub-Zhu
            </div>
        </div>
    </div>
</body>
@Scripts.Render("~/Scripts/Jquery")
@Scripts.Render("~/Scripts/Jquery-Validate")
@Scripts.Render("~/Scripts/Jquery-Validate-unobtrusive")
@Scripts.Render("~/Scripts/Jquery-Ajax-unobtrusive")
@Scripts.Render("~/Scripts/Icheck")
@Scripts.Render("~/Scripts/LayAlert")
@Scripts.Render("~/Scripts/Pace")
@Scripts.Render("~/Scripts/PersonLogin")

</html>
