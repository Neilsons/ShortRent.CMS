@model PassWordEditModel
@{
    Layout = "~/Views/Shared/AdminMaster.cshtml";
    WorkContext workContext = new WorkContext();
}
@using (Ajax.BeginForm(new AjaxOptions() { HttpMethod = "Post", OnSuccess = "SuccessEdit", OnBegin = "BeginEdit" }))
{
    @Html.AntiForgeryToken();
    <div class="form-horizontal box">
        <div class="box-body">
            @Html.ValidationSummary(true, "", new { @class = "text-error" })
            <input type="hidden" name="ID" value="@workContext.CurrentPerson.ID" />
            <div class="form-group col-md-6">
                <div class="row">
                    @Html.LabelFor(model => model.OldPassWord, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                    <div class="col-xs-12 col-md-8">
                        <div class="row clear-margin">
                            @Html.PasswordFor(model => model.OldPassWord,htmlAttributes:new { @class = "form-control col-md-8" } )
                            @Html.ValidationMessageFor(model => model.OldPassWord, "", new { @class = "text-error" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group col-md-6">
                <div class="row">
                    @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                    <div class="col-xs-12 col-md-8">
                        <div class="row clear-margin">
                            @Html.PasswordFor(model => model.PassWord, htmlAttributes:new { @class = "form-control col-md-8" } )
                            @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-error" })
                        </div>

                    </div>
                </div>

            </div>

            <div class="form-group col-md-6">
                <div class="row">
                    @Html.LabelFor(model => model.ConfirmPassWord, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                    <div class="col-xs-12 col-md-8">
                        <div class="row clear-margin">
                            @Html.PasswordFor(model => model.ConfirmPassWord, htmlAttributes: new { @class = "form-control col-md-8" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassWord, "", new { @class = "text-error" })
                        </div>

                    </div>
                </div>

            </div>
            <div class="form-group col-md-12">
                <div class="row text-center marTop-xs">
                    <input type="submit" value="修改密码" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    @Scripts.Render("~/Scripts/Jquery-Ajax-unobtrusive")
    @Scripts.Render("~/Scripts/PersonEditPassWord")
}